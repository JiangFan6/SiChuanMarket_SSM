<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IndustryInfoMapperDao接口方法提供sql语句配置 -->
<mapper namespace="com.ssm.demo.dao.IndustryInfoMapperDao">

    <!--添加一条行业信息-->
    <insert id="addAindustryInfo" parameterType="IndustryInfo">
        <selectKey resultType="int" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO
        industry_info(industryId,industryCode,industryName,totalOutPut,totalOutPut_unit,productionCosts,productionCosts_unit
        ,industryProfit,profit_unit,employedPopulation,employedPopulation_unit,statisticDate
        ,topCompanies)
        VALUES
        (#{industryId},#{industryCode},#{industryName},#{totalOutPut},#{totalOutPut_unit},#{productionCosts},#{productionCosts_unit}
        ,#{industryProfit},#{profit_unit},#{employedPopulation},#{employedPopulation_unit},#{statisticDate}
        ,#{topCompanies});
    </insert>

    <!--删除一条行业信息-->

    <delete id="deleteAindustryInfo" parameterType="String">
        DELETE FROM industry_info WHERE industryId=#{industryId}
    </delete>

    <!--修改一条行业信息-->
    <update id="updateAindustryInfo" parameterType="IndustryInfo">
        UPDATE industry_info SET
        industryCode=#{industryCode},
        industryName=#{industryName},
        totalOutPut=#{totalOutPut},
        totalOutPut_unit=#{totalOutPut_unit},
        productionCosts=#{productionCosts},
        productionCosts_unit=#{productionCosts_unit},
        industryProfit=#{industryProfit},
        profit_unit=#{profit_unit},
        employedPopulation=#{employedPopulation},
        employedPopulation_unit=#{employedPopulation_unit},
        statisticDate=#{statisticDate},
        topCompanies=#{topCompanies}
        WHERE   industryId=  #{industryId}

    </update>

    <!--查询某个行业数据-->
    <select id="findIndustryInfoByCode" parameterType="IndustryInfo" resultType="IndustryInfo">
        SELECT * FROM industry_info WHERE industryCode=#{industryCode} ORDER BY statisticDate ASC
    </select>




</mapper>